+{
+	int rc;
+	struct udevice *dev = NULL;
+	uchar val;
+
+	rc = i2c_get_chip_for_busnum(0, 0x31, 1, &dev);
+
+	val = 0xbb;
+	dm_i2c_write(dev, 0x5, &val, 1);
+
+	return 0;
+}
