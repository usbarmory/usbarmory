+				"echo \"***********************************************\" ; "	\
+				"echo ; "							\
+			"fi ; "									\
+		"fi ; "										\
+		"if itest $imx6_family == 0x65; then "						\
+			"if itest $silicon_revision < 0x0001; then "				\
+				"echo ; "							\
+				"echo \"********************************************\" ; "	\
+				"echo \"* WARNING                                  *\" ; "	\
+				"echo \"* i.MX6ULL/ULZ with Silicon Revision < 1.1 *\" ; "	\
+				"echo \"* Important security fixes are missing     *\" ; "	\
